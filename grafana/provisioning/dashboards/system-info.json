{
  "id": null,
  "uid": "system-info-api",
  "title": "System Info API Dashboard",
  "tags": ["system-info", "flask", "devops"],
  "timezone": "browser",
  "refresh": "15s",
  "schemaVersion": 37,
  "panels": [
    {
      "id": 1,
      "title": "nginx - Requests per Second",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(nginx_http_requests_total[1m])",
          "legendFormat": "req/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "reqps"
        }
      }
    },
    {
      "id": 2,
      "title": "nginx - Active Connections",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "nginx_connections_active",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 50},
              {"color": "red", "value": 100}
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Flask - Total Requests",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
      "targets": [
        {
          "expr": "flask_requests_total",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [{"color": "blue", "value": null}]
          }
        }
      }
    },
    {
      "id": 4,
      "title": "System - CPU Usage",
      "type": "gauge",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 4},
      "targets": [
        {
          "expr": "system_cpu_percent",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 60},
              {"color": "red", "value": 80}
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "System - Memory Usage",
      "type": "gauge",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 4},
      "targets": [
        {
          "expr": "system_memory_percent",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        }
      }
    },
    {
      "id": 6,
      "title": "System - CPU Usage Over Time",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "system_cpu_percent",
          "legendFormat": "CPU %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 7,
      "title": "System - Memory Usage Over Time",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "system_memory_percent",
          "legendFormat": "Memory %",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {"mode": "palette-classic"},
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "id": 8,
      "title": "System - Disk Usage",
      "type": "gauge",
      "gridPos": {"h": 4, "w": 12, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "system_disk_percent",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "color": {"mode": "thresholds"},
          "thresholds": {
            "steps": [
              {"color": "green", "value": null},
              {"color": "yellow", "value": 75},
              {"color": "red", "value": 90}
            ]
          }
        }
      }
    },
    {
      "id": 9,
      "title": "nginx - Connection States",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "nginx_connections_reading",
          "legendFormat": "reading",
          "refId": "A"
        },
        {
          "expr": "nginx_connections_writing",
          "legendFormat": "writing",
          "refId": "B"
        },
        {
          "expr": "nginx_connections_waiting",
          "legendFormat": "waiting",
          "refId": "C"
        }
      ]
    }
  ],
  "time": {"from": "now-30m", "to": "now"}
}
